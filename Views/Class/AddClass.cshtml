@model SchoolMVC.Models.Class
@{
	ViewData["Title"] = "Thêm CLASS";
}

<h1 class="text-center">THÊM LỚP</h1>
<form asp-action="AddClass" method="post">
	@Html.AntiForgeryToken()
	<div class="form-group">
		<label asp-for="Code" class="control-label">Nhập mã lớp</label>
		<input asp-for="Code" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="ClassName" class="control-label">Nhập tên lớp</label>
		<input asp-for="ClassName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="TeacherName" class="control-label">Nhập tên giáo viên</label>
		<input asp-for="TeacherName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="SchoolId" class="control-label">Chọn trường</label>
		<select asp-items="@ViewBag.listSchool" asp-for="SchoolId" class="form-control">
			<option>---Chọn trường---</option>
		</select>
	</div>
	<button class="btn btn-outline-primary" type="submit">
		<i class="fas fa-user-plus fa-2x"></i>
	</button>
	<a class="btn btn-outline-success" asp-action="Index">
		<i class="fas fa-user-times fa-2x"></i>
	</a>
	<a class="btn btn-link" asp-action="Index">
		<i class="fas fa-list-ul fa-2x"></i>
	</a>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}