@model SchoolMVC.Models.Student
@{
	ViewData["Title"] = "Chi tiết sinh viên";
}

<div class="row mt-5">
	<div class="col-3">
		<img src="~/img/@Model.Avatar" alt="Hình ảnh" style="width: 100%; height: 100%;" />
	</div>
	<div class="col-9">
		<table class="table">
			<tr>
				<td><strong>MSSV:</strong> @Model.Code</td>
				<td><strong>Họ tên:</strong> @Model.Name</td>
			</tr>
			<tr>
				<td><strong>Năm sinh:</strong> @Model.YearOfBirth</td>
				@if (Model.Gender == false)
				{
					<td><strong>Giới tính:</strong> Nam</td>
				}
				else
				{
					<td><strong>Giới tính:</strong> Nữ</td>
				}
			</tr>
			<tr>
				<td><strong>Địa chỉ:</strong> @Model.Address</td>
				<td><strong>Chi tiết:</strong> @Model.Detail</td>
			</tr>
			<tr>
				<td><strong>Lớp: </strong>@Model.Class.ClassName</td>
				<td>
					<div class="btn-group">
						<a class="btn btn-outline-dark" asp-action="Update"><i class="fas fa-edit"></i></a>
						<a class="btn btn-outline-dark" onclick="return confirm('Xác nhận xóa?')" asp-action="Delete"><i class="fas fa-trash-alt"></i></a>
					</div>
				</td>
			</tr>
		</table>
	</div>
</div>
<a asp-action="Index" class="btn btn-outline-secondary mt-3"><i class="fas fa-backward"></i></a>