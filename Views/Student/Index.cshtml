@model IEnumerable<SchoolMVC.Models.Student>
@{
	ViewData["Title"] = "Bảng STUDENT";
}

<div class="text-center">
	<h1>Bảng <span class="badge badge-dark">STUDENT</span></h1>
</div>

<table class="table" border="1">
	<thead class="table-dark text-center">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Code)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.YearOfBirth)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Gender)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Class.ClassName)
			</th>
			<th>Chi tiết / Sửa / Xóa</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
		<tr>
			<td>
				@Html.DisplayFor(Model => item.Code)
			</td>
			<td>
				@Html.DisplayFor(Model => item.Name)
			</td>
			<td class="text-center">
				@Html.DisplayFor(Model => item.YearOfBirth)
			</td class="text-center">
				@if (item.Gender == false) {
					<td>Nam</td>
				}else { <td>Nữ</td>}
			<td>
				@Html.DisplayFor(Model => item.Class.ClassName)
			</td>
			<td class="text-center">
				<div class="btn-group">
					<a class="btn btn-outline-dark" href="/student/@SlugGenerator.SlugGenerator.GenerateSlug(item.Name)-@item.Id">
						<i class="fas fa-eye"></i>
					</a>
					<a class="btn btn-outline-dark" asp-action="Update" asp-route-id="@item.Id">
						<i class="fas fa-edit"></i>
					</a>
					<a class="btn btn-outline-dark" onclick="return confirm('Xác nhận xóa?')" asp-action="Delete" asp-route-id="@item.Id">
						<i class="fas fa-trash-alt"></i>
					</a>
				</div>
			</td>
		</tr>
		}
	</tbody>
</table>

<a class="btn btn-outline-dark" asp-action="AddStudent">
	<i class="fas fa-plus fa-2x"></i>
</a>